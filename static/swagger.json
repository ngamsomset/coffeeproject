{
    "definitions": {
      "User": {
        "properties": {
          "postcode": {
            "description": "Postcode of the user",
            "type": "string"
          },
          "gender": {
            "description": "Gender of the user",
            "type": "integer",
            "enum": [
              0,
              1,
              2
            ]
          },
          "age": {
            "description": "Age of the user",
            "type": "integer"
          }
        },
        "required": [
          "postcode",
          "gender",
          "age"
        ]
      },
      "Recommendation": {
        "properties": {
          "cafe": {
            "description": "Cafe identifier",
            "type": "string"
          },
          "ranking": {
            "description": "Ranking of the cafe for a given user",
            "type": "numeric"
          }
        },
        "required": [
          "cafeId",
          "ranking"
        ]
      },
      "Evaluation": {
        "properties": {
          "cafe": {
            "description": "Cafe identifier",
            "type": "string"
          },
          "cafeCategoryIDList": {
            "description": "List of categories for evaluation",
            "type": "array",
            "items": {
                "type": "string"
            },
            "example": ["id1", "Id2", "id3"]
          },
          "cafeCategoryIDValuesList": {
            "description": "List of categories for evaluation",
            "type": "array",
            "items": {
                "type": "integer"
            },
            "example": ["4", "5", "5"]
          }
        },
        "required": [
          "cafe",
          "cafeCategoryIDList",
          "cafeCategoryIDMarksList"
        ]
      },
      "Response": {
        "properties": {
          "questionIDList": {
            "description": "List of IDs for answered questions",
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": "true",
            "example": ["question_id1","question_id2","question_id3","question_id4","question_id5" ]
          },
          "questionsValuesList": {
            "description": "List of answers",
            "type": "array",
            "items": {
                "type": "string"
            },
            "example": ["2", "4", "2", "2", "1"]
          }
        },
        "required": [
          "questionIDList",
          "questionsValuesList"
        ]
      }
    },
    "info": {
      "title": "Cafe recommendation service",
      "version": "1.0.0"
    },
    "paths": {
      "/users/{id}": {
        "get": {
          "summary": "Get user",
          "description": "Returns user information for a user with a given id",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "description": "User identifier",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          },
          "tags": [
            "users"
          ]
        },
        "put": {
          "summary": "Add user",
          "description": "Ads user to the database",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "description": "User identifier",
              "schema": {
                "type": "string"
              }
            },
            {
              "in": "body",
              "name": "body",
              "description": "User details",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Success"
            }
          },
          "tags": [
            "users"
          ]
        }
      },
      "/users/{id}/recommendations": {
        "get": {
          "summary": "Get recommendations",
          "description": "Returns recommndations for a given user",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "description": "User identifier",
              "schema": {
                "type": "string"
              }
            },
            {
              "in": "query",
              "name": "start",
              "description": "Zero-based position of the first prediction to return",
              "schema": {
                "type": "integer"
              }
            },
            {
              "in": "query",
              "name": "size",
              "description": "Number of predictions to return",
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "schema": {
                  "$ref": "#/definitions/Recommendation"
                }
              }
            }
          },
          "tags": [
            "users"
          ]
        }
      },
      "/users/{id}/responses": {
        "put": {
          "summary": "User's answers collection",
          "description": "Reciev user's answers to store them into a database",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "description": "User identifier",
              "schema": {
                "type": "string"
              }
            },
            {
              "in": "body",
              "name": "body",
              "description": "User's question responses",
              "schema": {
                "$ref": "#/definitions/Response"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Success"
            }
          },
          "tags": [
            "users"
          ]
        }
      },
      "/users/{id}/ranking": {
        "put": {
          "summary": "User's cafe ranking collection",
          "description": "Recieve user's cafe marks to store them into a database",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "description": "User identifier",
              "schema": {
                "type": "string"
              }
            },
            {
              "in": "body",
              "name": "body",
              "description": "User's cafe rankings",
              "schema": {
                "$ref": "#/definitions/Evaluation"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Success"
            }
          },
          "tags": [
            "users"
          ]
        }
      }
    },
    "swagger": "2.0"
  }